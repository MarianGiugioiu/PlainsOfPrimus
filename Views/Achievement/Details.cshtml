@model PlainsOfPrimus.Models.Achievement

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Achievement</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Requirements)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Requirements)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Points)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Points)
        </dd>

    </dl>
    <table class="table">
        <tr>
            <th>
                Players with this achievement:
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model.Characters)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "DetailsAnother", "Character", new { id = item.Id }, null)
                </td>
                
            </tr>
        }
    </table>
</div>
@{
    if (this.User.Identity.IsAuthenticated)
    {
        if (this.User.IsInRole("Admin"))
        {
            <p>

                @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
            </p>
        }
    }
}

