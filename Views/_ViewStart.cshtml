@{
    if (this.User.Identity.IsAuthenticated)
    {
        if (this.User.IsInRole("Player"))
        {
            Layout = "~/Views/Shared/_LayoutPlayer.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
        }
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

}
